<section class="my-16" id="listTour">
    <div class="mb-8 mx-4 sm:mx-8 md:mx-16"  id="divide">
        <div class="w-full ">
            <h2 class="text-3xl sm:text-4xl md:text-6xl font-semibold mb-4">{{location_name}}</h2>
            <p class="text-base sm:text-lg font-medium text-gray-600 mb-8">{{loc_detail}}</p>
        </div>
    </div>

    <hr class="w-full border-gray-200 my-8 mx-auto">

    <div class="flex flex-col sm:flex-row gap-4">
        <div class="md:basis-2/6">


            <form id="searchService" action="\tours" method="GET" class="mx-8 md:mx-16">
                <div class="price-range mt-6">
                    <label for="price-range" class="font-medium text-xl block mb-4">Select Price Range</label>
                    <div class="relative w-full h-10">
                        <!-- Track -->
                        <div class="absolute bg-gray-300 h-1 w-full rounded top-1/2 transform -translate-y-1/2"></div>
                        <!-- Range Highlight -->
                        <div id="slider-range" 
                            class="absolute bg-emerald-600 h-1 rounded top-1/2 transform -translate-y-1/2"
                            style="left: 20%; right: 20%;">
                        </div>
                        <!-- Min Price Slider -->
                        <input type="range" id="min-price" 
                            class="absolute w-1/2 h-1 bg-transparent appearance-none pointer-events-auto z-20"
                            min="0" max="250000" value="0" step="10000">
                        <!-- Max Price Slider -->
                        <input type="range" id="max-price" 
                            class="absolute left-1/2 w-1/2 h-1 bg-transparent appearance-none pointer-events-auto z-20"
                            min="250000" max="500000" value="500000" step="10000">
                    </div>
                    <div class="flex justify-between mt-4">
                        <span id="min-price-label" class="text-gray-700 text-sm">0 vnd</span>
                        <span id="max-price-label" class="text-gray-700 text-sm">500000 vnd</span>
                    </div>
                </div>
            </form>

            <button id="btnAdd" 
                class="my-4 mx-16 px-4 py-2 bg-green-900 text-white rounded-lg hover:bg-green-950">
                Thêm Món
            </button>

            <!-- Dialog (Modal) -->
            <div id="addDialog" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 flex justify-center items-center z-50">
                <div class="bg-white rounded-lg shadow-lg p-6 w-96">
                    <h2 class="text-xl font-bold mb-4">Thêm Món Ăn</h2>

                    <!-- Select để chọn sản phẩm -->
                    <label for="productSelect" class="block text-sm font-medium text-gray-700">Chọn món ăn:</label>
                    <select id="productSelect" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm mb-4">
                        <!-- Options sẽ được thêm từ API -->
                    </select>

                    <!-- Chọn giao hàng -->
                    <label for="deliverySelect" class="block text-sm font-medium text-gray-700">Giao hàng:</label>
                    <select id="deliverySelect" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm mb-4">
                        <option value="1">Có Giao Hàng</option>
                        <option value="0">Không Giao Hàng</option>
                    </select>

                    <!-- Nút hành động -->
                    <div class="flex justify-end gap-4">
                        <button id="cancelAdd" 
                            class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">
                            Hủy
                        </button>
                        <button id="confirmAdd" 
                            class="px-4 py-2 bg-green-900 text-white rounded-lg hover:bg-green-950">
                            Thêm
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="basis-4/6">
            <div id="showTours" class="grid grid-cols-1 lg:grid-cols-2 gap-2 md:gap-6 mx-0 md:mx-8">
                </div>
            <div class="pagination flex col-start-1 max-h-10 mt-4 px-8 ">
                <button id="prev-page" onclick="prevPage()">Previous</button>
                <div id="pageNumbers"></div> <!-- Container for page number buttons -->
                <button id="next-page" onclick="nextPage()">Next</button>
            </div>
        </div>
    </div>

</section>