<section id="reserveDish" class="py-12 px-8 bg-gray-50">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-center mb-10 border-b pb-6">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-800">Reserve Table</h1>
        <div class="flex flex-col md:flex-row items-center gap-6 mt-6 md:mt-0">
            <!-- Branch Selector -->
            <div class="flex flex-col">
                <label for="cn" class="mb-2 text-lg font-medium text-gray-700">Chi Nhánh:</label>
                <select name="chi_nhanh" id="cn" class="p-3 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="" disabled selected>Chọn Chi Nhánh</option>
                    {{#each allBranch}}
                    <option value={{this.MaCN}} data-KV={{this.MaKhuVuc}}>{{this.TenCN}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>

    <!-- Reservation Form -->
    <div class="p-8 bg-white rounded-lg shadow-lg max-w-xl mx-auto space-y-6">
        <!-- Guest Count -->
        <div>
            <label for="guests" class="block text-lg font-medium text-gray-700 mb-2">Số lượng khách:</label>
            <input type="number" id="guests" name="guests" min="1" max="20" placeholder="Nhập số lượng khách" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>

        <!-- Reservation Time -->
        <div>
            <label for="reservation-time" class="block text-lg font-medium text-gray-700 mb-2">Thời gian đặt bàn:</label>
            <input type="datetime-local" id="reservation-time" name="reservation-time" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>

        <!-- Notes -->
        <div>
            <label for="notes" class="block text-lg font-medium text-gray-700 mb-2">Ghi chú:</label>
            <textarea id="notes" name="notes" placeholder="Nhập ghi chú (nếu có)" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" rows="4"></textarea>
        </div>
    </div>

    <!-- Pre-order Dish -->
    <div class="mt-12">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-6">Pre-order Dish</h2>
        <div id="dish-container" class="space-y-6">
            <!-- Dishes will be dynamically added here -->
        </div>
        <div class="mt-4 flex justify-end">
            <button id="addDishButton" class="bg-green-500 text-white font-medium py-2 px-6 rounded-lg shadow-lg hover:bg-green-600 transition-all">Add Dish</button>
        </div>
    </div>

    <!-- Submit -->
    <div class="mt-12 flex justify-center">
        <button type="button" id="submitButton" class="bg-blue-600 text-white font-bold py-3 px-8 rounded-lg shadow-lg hover:bg-blue-700 transition-transform transform hover:scale-105 focus:ring-4 focus:ring-blue-300">
            Submit
        </button>
    </div>
</section>