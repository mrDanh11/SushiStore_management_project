/*     align-items: flex-start; */
/*     flex-direction: row; */
/* } */
.headerWrap {
    display: inline-block;
    text-align: center;
}
.headerText {
    display: inline-block;
    margin: 20px;
}
.headerText:first-child{
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 3em;
    font-weight: 300;
    color: rgb(0,200,200);
    text-shadow: -2px 2px rgba(0,0,0,0.1);
}
.StatButton {
    display: inline-block;
    background-color: rgb(0,255,200);
    border-radius: 1rem;
    text-align: center;
    font-size: 1.5em;
    padding: 2%;
    margin: 5%;
    transition: background-color 0.5s;
}
.StatButton:hover{
    background-color: rgb(0,200,150);
}

.buttonWrapper{
    max-width: 100%;
    flex-wrap: wrap;
}

.selectBox {
    position: relative;
    top: 5%;
    left: 5%;
    width: 2em;
    height: 1em;
}
select{
    border-radius: 0.5rem;
    background-color: rgb(0, 230, 230);
    padding: 28%;
}
input {
    border-radius: 0.5rem;
    background-color: rgb(0, 230, 230);
    padding: 0.5%;
}

.dateSelect1{
    position: relative;
    top: 5%;
    left: 15vw;
}
.dateSelect2{
    position: relative;
    top: 5%;
    left: 20vw;
}
.submitButton {
    position: relative;
    top:5%;
    left: 27vw;

}
.menu-section {
    margin: 50px;
}

tr { 
    margin: 10px;
}
</style>


<html>
    <div id="Stat form box" class="flex flex-row">
        {{> AdminHeader}}
        <div id="mainForm" class="flex flex-col w-full">
            <div id="text wrapper" class="headerWrap w-full">
                <div id="headerItself" class="headerText">
                    <h1>
                        Thống kê theo tháng 
                    </h1>
                </div>
            </div>

            <form id="dailyForm" method="POST" class="flex flex-row">
                <div class="selectBox">
                    <select onchange="document.getElementById('MaCN').value = this.value">
                        <option value="" disabled {{#unless MaCN}}selected{{/unless}}>-- Select chinhanh --</option>
                        {{#each chinhanh}}
                        <option value={{this.MaCN}}>{{this.TenCN}}</option>
                        {{/each}}
                    </select>
                </div>
                <input type="date" name="Ngay1" value="01/01/2024" class="dateSelect1"> 
                <input type="date" name="Ngay2" value="01/01/2024" class="dateSelect2"> 
                <input type="hidden" id="MaCN" name="MaCN" value="0">
                <input type="submit" value="submit" class="submitButton">
            </form>

            <div class="menu-section bg-white rounded shadow">
                <table class="menu-table w-full border-collapse border border-gray-300">
                    <thead>
                        <tr class="bg-gray-200 text-gray-700">
                            <th class="border border-gray-300 p-2">Chi Nhanh</th>
                            <th class="border border-gray-300 p-2">Thang</th>
                            <th class="border border-gray-300 p-2">Doanh Thu</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each doanhthu}}
                        <tr class="hover:bg-gray-100">
                            <td class="border border-gray-300 p-2 text-center">{{this.MaChiNhanh}}</td>
                            <td class="border border-gray-300 p-2 text-center">{{this.Thang}}</td>
                            <td class="border border-gray-300 p-2 text-center">{{this.DoanhThu}}</td>
                            <!-- <td class="border border-gray-300 p-2 text-center flex gap-2 justify-center"> -->
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</html>