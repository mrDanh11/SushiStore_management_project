<div class="flex">
  <!-- Sidebar -->
  {{> AdminHeader}}

  <main class="flex-1 bg-gray-100">

    <form action="/admin/employees" method="GET">
      <div class="form-group">
        <label for="MaChiNhanh">Filter by Branch:</label>
        <select id="MaChiNhanh" name="MaChiNhanh" class="form-control">
          <option value="">Select Branch</option>
          {{#each branches}}
          <option value="{{this.MaCN}}" {{#if (eq this.MaCN ../MaChiNhanh)}}selected{{/if}}>
            {{this.TenCN}}
          </option>
          {{/each}}
        </select>
        <button type="submit" class="btn">Filter</button>
      </div>
    </form>

    <form action="/admin/employees/search" method="GET">
      <div class="form-group">
        <label for="searchTerm">Search Employee:</label>
        <input type="text" id="searchTerm" name="searchTerm" class="form-control"
          placeholder="Enter Code and Name Of Employee" value="{{searchTerm}}">
        <button type="submit" class="btn">Tìm kiếm</button>
      </div>
      {{!-- <button type="submit" class="btn">Tìm kiếm</button> --}}
    </form>

    <table border="1" cellpadding="10" cellspacing="0" class="employee-table">
      <thead>
        <tr>
          <th>Employee Code</th>
          <th>Full Name</th>
          <th>Gender</th>
          <th>Date of Birth</th>
          <th>Address</th>
          <th>Department</th>
          <th>Branch</th>
          <th>Luong</th>
          <th>Actions</th>
          <th colspan="2">
            <div class="add-employee-btn-container">
              <label for="addEmployee">Add Employee:</label>
              <a href="/admin/employees/add" class="add-employee-btn">Add</a>
            </div>
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each employees}}
        <tr>
          <td>{{this.MaNV}}</td>
          <td>{{this.HoTen}}</td>
          <td>{{this.Phai}}</td>
          <td class="date-cell">{{this.NgaySinh}}</td>
          {{!-- <td>{{this.NgaySinh}}</td> --}}
          <td>{{this.SoNha}}, {{this.Duong}}, {{this.Quan}}, {{this.ThanhPho}}</td>
          <td>{{this.BoPhan}}</td>
          <td>{{this.ChiNhanh}}</td>
          <td>{{this.Luong}}</td>
          <td>
            <a href="/admin/employees/edit/{{this.MaNV}}" class="action-btn edit-btn">Edit</a>
            <form action="/admin/employees/delete/{{this.MaNV}}" method="post" style="display:inline;">
              <button type="submit" class="action-btn delete-btn">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

  </main>
</div>


<script>
  document.addEventListener('DOMContentLoaded', function () {
    const dateCells = document.querySelectorAll('.date-cell'); // lấy tất cả các ô có class là 'date-cell'

    dateCells.forEach(cell => {
      const dateText = cell.textContent;
      const date = new Date(dateText);
      const formattedDate = date.toISOString().split('T')[0];
      cell.textContent = formattedDate;
    });
  });
</script>