<div class="flex">
    <!-- Sidebar -->
    {{> admin_partials/sidebar}}

    <main class="flex-1 p-8 bg-gray-100">
        <div class="bg-white shadow-lg rounded-lg p-6">
            <h1 class="text-3xl font-bold mb-6 text-gray-800 text-center">{{title}}</h1>

            <!-- Form Sửa Chi Nhánh -->
            <form method="POST" action="/admin/branches/edit/{{branch.MaCN}}" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="TenCN" class="block text-gray-700 font-semibold mb-2">Branch Name:</label>
                        <input type="text" name="TenCN" id="TenCN" value="{{branch.TenCN}}" required
                            class="w-full p-2 border rounded focus:ring-blue-500">
                    </div>
                    <div>
                        <label for="DiaChi" class="block text-gray-700 font-semibold mb-2">Address:</label>
                        <input type="text" name="DiaChi" id="DiaChi" value="{{branch.DiaChi}}" required
                            class="w-full p-2 border rounded focus:ring-blue-500">
                    </div>
                    <div>
                        <label for="GioMo" class="block text-gray-700 font-semibold mb-2">Open Time:</label>
                        <input type="time" name="GioMo" id="GioMo" value="{{branch.GioMo}}" required
                            class="w-full p-2 border rounded focus:ring-blue-500">
                    </div>
                    <div>
                        <label for="GioDong" class="block text-gray-700 font-semibold mb-2">Close Time:</label>
                        <input type="time" name="GioDong" id="GioDong" value="{{branch.GioDong}}" required
                            class="w-full p-2 border rounded focus:ring-blue-500">
                    </div>
                    <div>
                        <label for="SDT" class="block text-gray-700 font-semibold mb-2">Phone:</label>
                        <input type="text" name="SDT" id="SDT" value="{{branch.SDT}}" required
                            class="w-full p-2 border rounded focus:ring-blue-500">
                    </div>
                    <div>
                        <label for="MaKhuVuc" class="block text-gray-700 font-semibold mb-2">Region:</label>
                        <select name="MaKhuVuc" id="MaKhuVuc" class="w-full p-2 border rounded focus:ring-blue-500">
                            {{#each regions}}
                            <option value="{{this.MaKhuVuc}}" {{#ifCond this.MaKhuVuc
                                ../branch.MaKhuVuc}}selected{{/ifCond}}>
                                {{this.TenKhuVuc}}
                            </option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded shadow hover:bg-blue-700">
                    ✔ Update Branch
                </button>
            </form>
        </div>
    </main>
</div>