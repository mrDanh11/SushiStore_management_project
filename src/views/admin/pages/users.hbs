                        <th class="px-4 py-2">Nh√¢n Vi√™n L·∫≠p</th>
                        <th class="px-4 py-2">C·∫≠p Nh·∫≠t</th>
                        <th class="px-4 py-2 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr class="border-t">
                        <td class="px-4 py-2">{{this.MaThe}}</td>
                        <td class="px-4 py-2">{{this.CCCD}}</td>
