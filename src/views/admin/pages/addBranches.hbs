<div class="flex">
    <!-- Sidebar -->
    {{> admin_partials/sidebar}}

    <main class="flex-1 p-8 bg-gray-100">
        <div class="bg-white shadow-lg rounded-lg p-6">
            <h1 class="text-3xl font-bold mb-6 text-gray-800 text-center">{{title}}</h1>

            <!-- Form Thêm Chi Nhánh -->
            <form method="POST" action="/admin/branches/add" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-gray-700 font-semibold mb-2" for="TenCN">Branch Name:</label>
                        <input type="text" name="TenCN" id="TenCN" required
                            class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label class="block text-gray-700 font-semibold mb-2" for="DiaChi">Address:</label>
                        <input type="text" name="DiaChi" id="DiaChi" required
                            class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label class="block text-gray-700 font-semibold mb-2" for="GioMo">Open Time:</label>
                        <input type="time" name="GioMo" id="GioMo" required
                            class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label class="block text-gray-700 font-semibold mb-2" for="GioDong">Close Time:</label>
                        <input type="time" name="GioDong" id="GioDong" required
                            class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label class="block text-gray-700 font-semibold mb-2" for="SDT">Phone:</label>
                        <input type="text" name="SDT" id="SDT" required
                            class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label class="block text-gray-700 font-semibold mb-2">Delivery:</label>
                        <select name="GiaoHang" required
                            class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-gray-700 font-semibold mb-2">Motorbike:</label>
                        <select name="XeMay" required
                            class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-gray-700 font-semibold mb-2">Car:</label>
                        <select name="XeHoi" required
                            class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-gray-700 font-semibold mb-2" for="MaKhuVuc">Region:</label>
                        <select name="MaKhuVuc" id="MaKhuVuc" required
                            class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                            <option value="">-- Select Region --</option>
                            {{#each regions}}
                            <option value="{{this.MaKhuVuc}}">{{this.TenKhuVuc}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <button type="submit"
                    class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg shadow-md hover:bg-blue-700 focus:outline-none">
                    ➕ Add Branch
                </button>
            </form>
        </div>
    </main>
</div>