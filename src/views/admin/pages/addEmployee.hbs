<h1>Add Employee</h1>
<form action="/admin/employees/add" method="post">
  <label for="maNV">Employee Code:</label>
  <input type="text" id="maNV" name="maNV" required><br><br>

  <label for="tenNV">Full Name:</label>
  <input type="text" id="tenNV" name="tenNV" required><br><br>

  <label for="gioiTinh">Gender:</label>
  <select id="gioiTinh" name="gioiTinh" required>
    <option value="Male">Male</option>
    <option value="Female">Female</option>
  </select><br><br>

  <label for="ngaySinh">Date of Birth:</label>
  <input type="date" id="ngaySinh" name="ngaySinh" required><br><br>

  <label for="sdt">Phone Number:</label>
  <input type="text" id="sdt" name="sdt" required><br><br>

  <label for="email">Email:</label>
  <input type="email" id="email" name="email" required><br><br>

  <label for="diaChi">Address:</label>
  <input type="text" id="diaChi" name="diaChi" required><br><br>

  <label for="chiNhanh">Branch:</label>
  <input type="text" id="chiNhanh" name="chiNhanh" required><br><br>

  <label for="chucVu">Position:</label>
  <input type="text" id="chucVu" name="chucVu" required><br><br>

  <button type="submit">Add Employee</button>
</form>
