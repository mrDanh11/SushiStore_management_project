<style>
  .form-group {
    display: flex;
    align-items: center;
    gap: 10px;
    /* Khoảng cách giữa các thành phần */
    margin-bottom: 20px;
    /* Khoảng cách phía dưới toàn bộ filter */
  }

  .form-group label {
    font-size: 16px;
    font-weight: bold;
    margin-right: 10px;
    /* Khoảng cách giữa label và dropdown */
  }

  .form-group select {
    padding: 5px 10px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 5px;
    min-width: 200px;
  }

  .btn {
    padding: 5px 15px;
    background-color: #007bff;
    /* Màu xanh của nút */
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 14px;
  }

  .btn:hover {
    background-color: #0056b3;
    /* Màu khi hover */
  }
</style>

<form action="/admin/employees" method="GET">
  <div class="form-group">
    <label for="MaChiNhanh">Filter by Branch:</label>
    <select id="MaChiNhanh" name="MaChiNhanh" class="form-control">
      <option value="">Select Branch</option>
      {{#each branches}}
      <option value="{{this.MaCN}}" {{#if (eq this.MaCN ../MaChiNhanh)}}selected{{/if}}>
        {{this.TenCN}}
      </option>
      {{/each}}
    </select>
    <button type="submit" class="btn">Filter</button>
  </div>
</form>


<!-- Admin Dashboard - index.hbs -->
<div class="flex">
  <!-- Sidebar -->
  {{> admin_partials/sidebar}}


  <table border="1" cellpadding="10" cellspacing="0" class="employee-table">
    <thead>
      <tr>
        <th>Employee Code</th>
        <th>Full Name</th>
        <th>Gender</th>
        <th>Date of Birth</th>
        <th>Address</th>
        <th>Department</th>
        <th>Branch</th>
        <th>Luong</th>
        <th>Actions</th>
        <th colspan="2">
          <div class="add-employee-btn-container">
            <label for="addEmployee">Add Employee:</label>
            <a href="/admin/employees/add" class="add-employee-btn">Add</a>
          </div>
        </th>

        <th>
          <div class="header">
            <form action="/admin/employees/search" method="GET">
              <div class="form-group">
                <label for="searchTerm">Search Employee:</label>
                <input type="text" id="searchTerm" name="searchTerm" class="form-control"
                  placeholder="Enter Code and Name Of Employee" value="{{searchTerm}}">
              </div>
              <button type="submit" class="btn">Tìm kiếm</button>
            </form>
          </div>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each employees}}
      <tr>
        <td>{{this.MaNV}}</td>
        <td>{{this.HoTen}}</td>
        <td>{{this.Phai}}</td>
        <td class="date-cell">{{this.NgaySinh}}</td>
        {{!-- <td>{{this.NgaySinh}}</td> --}}
        <td>{{this.SoNha}}, {{this.Duong}}, {{this.Quan}}, {{this.ThanhPho}}</td>
        <td>{{this.BoPhan}}</td>
        <td>{{this.ChiNhanh}}</td>
        <td>{{this.Luong}}</td>
        <td>
          <a href="/admin/employees/edit/{{this.MaNV}}" class="action-btn edit-btn">Edit</a>
          <form action="/admin/employees/delete/{{this.MaNV}}" method="post" style="display:inline;">
            <button type="submit" class="action-btn delete-btn">Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  {{!-- <div class="add-employee-btn-container">
    <a href="/admin/employees/add" class="add-employee-btn">Add New Employee</a>
  </div> --}}

</div>



