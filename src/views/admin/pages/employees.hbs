<script>
  document.addEventListener('DOMContentLoaded', function () {
    const dateCells = document.querySelectorAll('.date-cell'); // Lấy tất cả các ô có class là 'date-cell'

    dateCells.forEach(cell => {
      const dateText = cell.textContent;
      const date = new Date(dateText); // Chuyển chuỗi thành đối tượng Date
      const formattedDate = date.toISOString().split('T')[0]; // Chỉ lấy phần ngày trong định dạng yyyy-MM-dd
      cell.textContent = formattedDate; // Cập nhật nội dung của ô
    });
  });
</script>