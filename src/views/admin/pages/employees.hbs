  }

  .employee-table th {
    text-align: center;
    background-color: #4CAF50;
    color: white;
  }

  .add-employee-btn-container {
    text-align: center;
  }

  .addEmployee {
    margin: 15px auto;
  }

  .add-employee-btn-container {
    display: flex;
