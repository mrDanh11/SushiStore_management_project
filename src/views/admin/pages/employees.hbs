<style>
  /* CSS cho bảng */
  .employee-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
  }

  .employee-table th,
  .employee-table td {
    padding: 10px;
    text-align: left;
    border: 1px solid #ddd;
  }

  .employee-table th {
    background-color: #f2f2f2;
  }

  .employee-table tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  /* CSS cho nút Edit và Delete */
  .action-btn {
    padding: 5px 10px;
    margin: 2px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
  }

  .edit-btn {
    background-color: #4CAF50;
    color: white;
  }

  .delete-btn {
    background-color: #f44336;
    color: white;
    border: none;
    cursor: pointer;
  }

  .delete-btn:hover {
    background-color: #e53935;
  }

  .add-employee-btn-container {
    text-align: center;
    margin-top: 20px;
  }

  .add-employee-btn {
    padding: 10px 20px;
    background-color: #008CBA;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-size: 16px;
  }

  .add-employee-btn:hover {
    background-color: #006f8a;
  }

  /* CSS cho bảng khi không có dữ liệu */
  .employee-table td {
    text-align: center;
  }

  th {
    background-color: #4CAF50;
    text-align: center;
  }

.employee-table th {
  text-align: center; 
  background-color: #4CAF50;
  color: white;
}

.add-employee-btn-container {
  text-align: center;
}

</style>

<!-- Admin Dashboard - index.hbs -->
<div class="flex">
  <!-- Sidebar -->
  {{> admin_partials/sidebar}}

  <table border="1" cellpadding="10" cellspacing="0" class="employee-table">
    <thead>
      <tr>
        <th>Employee Code</th>
        <th>Full Name</th>
        <th>Gender</th>
        <th>Date of Birth</th>
        <th>Address</th>
        <th>Department</th>
        <th>Branch</th>
        <th>Actions</th>
        <th>
          <div class="add-employee-btn-container">
            <a href="/admin/employees/add" class="add-employee-btn">Add </a>
          </div>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each employees}}
      <tr>
        <td>{{this.MaNV}}</td>
        <td>{{this.HoTen}}</td>
        <td>{{this.Phai}}</td>
        <td class="date-cell">{{this.NgaySinh}}</td>
        {{!-- <td>{{this.NgaySinh}}</td> --}}
        <td>{{this.SoNha}}, {{this.Duong}}, {{this.Quan}}, {{this.ThanhPho}}</td>
        <td>{{this.BoPhan}}</td>
        <td>{{this.ChiNhanh}}</td>
        <td>
          <a href="/admin/employees/edit/{{this.MaNV}}" class="action-btn edit-btn">Edit</a>
          <form action="/admin/employees/delete/{{this.MaNV}}" method="post" style="display:inline;">
            <button type="submit" class="action-btn delete-btn">Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  {{!-- <div class="add-employee-btn-container">
    <a href="/admin/employees/add" class="add-employee-btn">Add New Employee</a>
  </div> --}}



</div>


<script>
  document.addEventListener('DOMContentLoaded', function() {
    const dateCells = document.querySelectorAll('.date-cell'); // Lấy tất cả các ô có class là 'date-cell'

    dateCells.forEach(cell => {
      const dateText = cell.textContent;
      const date = new Date(dateText); // Chuyển chuỗi thành đối tượng Date
      const formattedDate = date.toISOString().split('T')[0]; // Chỉ lấy phần ngày trong định dạng yyyy-MM-dd
      cell.textContent = formattedDate; // Cập nhật nội dung của ô
    });
  });
</script>
