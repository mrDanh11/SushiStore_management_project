<h1>Edit Employee</h1>
<form action="/admin/employees/edit/{{employee.MaNV}}" method="post">
  <label for="maNV">Employee Code:</label>
  <input type="text" id="maNV" name="maNV" value="{{employee.MaNV}}" readonly><br><br>

  <label for="tenNV">Full Name:</label>
  <input type="text" id="tenNV" name="tenNV" value="{{employee.TenNV}}" required><br><br>

  <label for="gioiTinh">Gender:</label>
  <select id="gioiTinh" name="gioiTinh" required>
    <option value="Male" {{#if (eq employee.GioiTinh "Male")}}selected{{/if}}>Male</option>
    <option value="Female" {{#if (eq employee.GioiTinh "Female")}}selected{{/if}}>Female</option>
  </select><br><br>

  <label for="ngaySinh">Date of Birth:</label>
  <input type="date" id="ngaySinh" name="ngaySinh" value="{{employee.NgaySinh}}" required><br><br>

  <label for="sdt">Phone Number:</label>
  <input type="text" id="sdt" name="sdt" value="{{employee.SDT}}" required><br><br>

  <label for="email">Email:</label>
  <input type="email" id="email" name="email" value="{{employee.Email}}" required><br><br>

  <label for="diaChi">Address:</label>
  <input type="text" id="diaChi" name="diaChi" value="{{employee.DiaChi}}" required><br><br>

  <label for="chiNhanh">Branch:</label>
  <input type="text" id="chiNhanh" name="chiNhanh" value="{{employee.ChiNhanh}}" required><br><br>

  <label for="chucVu">Position:</label>
  <input type="text" id="chucVu" name="chucVu" value="{{employee.ChucVu}}" required><br><br>

  <button type="submit">Save Changes</button>
</form>
